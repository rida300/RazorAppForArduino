@page
@model RazorAppForArduino.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post" class="mt-3">
    <input hidden asp-for="OptimalBoost.Id" />

    <div asp-validation-summary="All" class="text-danger">
    </div>

    <div class="form-group row">
        <label asp-for="OptimalBoost.Psi" class="col-sm-2 col-form-label">

        </label>
        <div class="col-sm-10">
            <input asp-for="OptimalBoost.Psi" class="form-control" placeholder="Psi value">
        <span asp-validation-for="OptimalBoost.Psi" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="OptimalBoost.CorrespondingVoltage" class="col-sm-2 col-form-label">

        </label>
        <div class="col-sm-10">
            <input asp-for="OptimalBoost.CorrespondingVoltage" class="form-control" placeholder="Voltage value">
            <span asp-validation-for="OptimalBoost.CorrespondingVoltage" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group-row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-page="/OptimalBoosts" class="btn btn-primary">Cancel</a>
            </div>
        </div>
</form>

