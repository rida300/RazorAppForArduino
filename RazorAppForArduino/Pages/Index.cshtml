@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @Model.Message</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<form method="post">
    <div class="form-check">
        <button type="submit" class="btn btn-primary" asp-page-handler="LedOn">ON</button>
        <button type="submit" class="btn btn-primary" asp-page-handler="LedOff">OFF</button>
    </div>
</form>

